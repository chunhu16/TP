import java.util.Random;

public class PairOfDice {
	
	private int dice1;
	private int dice2;
	private Random rand;
	
	public PairOfDice(){
		rand = new Random();
		dice1 = rand.nextInt(6) + 1;
		dice2 = rand.nextInt(6) + 1;
	}
	
	public int[] getDices(){
		int[] res = new int[] {dice1 , dice2};
		return res;
	}
	@Override
	public String toString(){
		String res = "First dice value : ";
		res += dice1 + "\n";
		res +="Second dice value : ";
		res += dice2 + "\n";
		return res;
	}
	public void roll(){
		dice1 = rand.nextInt(6) + 1;
		dice2 = rand.nextInt(6) + 1;
	}
}
